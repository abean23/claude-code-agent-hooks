{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["target", "cases"],
  "properties": {
    "target": {
      "type": "string",
      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*:[a-zA-Z_][a-zA-Z0-9_]*$",
      "description": "Target function in format 'module:function'"
    },
    "cases": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "call", "expectation"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique test case identifier"
          },
          "call": {
            "type": "object",
            "required": ["args"],
            "properties": {
              "args": {
                "type": "array",
                "description": "Arguments to pass to the function"
              },
              "kwargs": {
                "type": "object",
                "description": "Keyword arguments to pass to the function"
              }
            }
          },
          "expectation": {
            "type": "object",
            "oneOf": [
              {
                "required": ["raises"],
                "properties": {
                  "raises": {
                    "type": "object",
                    "required": ["types"],
                    "properties": {
                      "types": {
                        "type": "array",
                        "items": {"type": "string"},
                        "minItems": 1
                      }
                    }
                  }
                }
              },
              {
                "required": ["equals"],
                "properties": {
                  "equals": {
                    "type": "object",
                    "required": ["value"],
                    "properties": {
                      "value": {
                        "type": "number"
                      },
                      "tolerance": {
                        "type": "number",
                        "minimum": 0
                      }
                    }
                  }
                }
              },
              {
                "required": ["predicate"],
                "properties": {
                  "predicate": {
                    "type": "object",
                    "required": ["name"],
                    "properties": {
                      "name": {
                        "type": "string",
                        "enum": ["math.isnan", "math.isinf", "math.isfinite"]
                      }
                    }
                  }
                }
              }
            ]
          }
        }
      }
    }
  }
}